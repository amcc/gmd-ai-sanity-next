{
  "webhooks": [
    {
      "name": "Artwork Content Updates",
      "url": "https://yourdomain.com/api/revalidate",
      "httpMethod": "POST",
      "headers": {
        "Content-Type": "application/json"
      },
      "filter": "_type == \"artwork\"",
      "projection": {
        "_type": "_type",
        "slug": "slug",
        "_id": "_id",
        "title": "title"
      },
      "bodyTemplate": "{\"secret\": \"your-secret-key-here\", \"_type\": \"{{document._type}}\", \"slug\": {{document.slug}}, \"_id\": \"{{document._id}}\", \"title\": \"{{document.title}}\", \"operation\": \"{{operation}}\"}"
    },
