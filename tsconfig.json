{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/common/ImageGrid/**",
    "src/components/common/PriorityArtworkCarousel/**",
    "src/components/common/RelatedSection/**",
    "src/components/common/Upcoming/**",
    "src/components/pageLayout/ArtworkPage/**",
    "src/components/pageLayout/BiographiesList/**"
  ]
}
